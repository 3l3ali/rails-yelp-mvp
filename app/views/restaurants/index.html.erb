<div class="container">
    <% @restaurants.each do |restaurant| %>
      <div class="row">
        <div class="restaurants-index">
          <div class="col-xs-12 col-md-offset-3 col-md-6">
            <h2><%= link_to restaurant.name, restaurant_path(restaurant), id: "restaurants-name-a"%></h2>
            <p><b>Address : </b><%= restaurant.address %></p>
            <p><b>Category : </b><%= restaurant.category %></p>
            <p><small><%= link_to "check out the reviews!", restaurant_reviews_path(restaurant) %></small></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
