<div class="restaurants-show">
  <div class="container">
      <div class="row">
        <div class="col-xs-12 col-md-offset-3 col-md-6">
          <h2><%= @restaurant.name %></h2>
          <p><b>Address : </b><%= @restaurant.address %></p>
          <p><b>Category : </b><%= @restaurant.category %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 col-md-offset-3 col-md-6 two-buttons">
          <ul class="list-inline">
            <li>
              <%= link_to "Back", restaurants_path, class: "btn btn-danger", id: "button-back"%>
            </li>
            <li>
              <%= link_to "Add a Review", new_restaurant_review_path(@restaurant), class: "btn btn-danger", id: "button-review"%>
            </li>
            <li>
              <%= link_to "All Reviews!", restaurant_reviews_path(@restaurant), class: "btn btn-danger" ,id: "button-back"%>
            </li>
          </ul>
      </div>
  </div>
</div>
